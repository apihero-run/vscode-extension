{
  "name": "jsonhero-vscode",
  "displayName": "jsonhero.io tools for VS Code",
  "description": "Quickly view JSON in jsonhero.io - a JSON tool to make JSON suck less",
  "icon": "assets/jsonhero-vscode.png",
  "galleryBanner": {
    "color": "#f8e164",
    "theme": "dark"
  },
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.64.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsonhero-io/vscode-extension.git"
  },
  "publisher": "JSONHero",
  "categories": [
    "Other"
  ],
  "keywords": [
    "json",
    "jsonhero"
  ],
  "activationEvents": [
    "onCommand:jsonhero.viewInJsonHero",
    "onCommand:jsonhero.viewInJsonHeroAtPath"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonhero.viewInJsonHero",
        "title": "View in jsonhero.io"
      },
      {
        "command": "jsonhero.viewInJsonHeroAtPath",
        "title": "View in jsonhero.io at path"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "JSONHero",
      "properties": {
        "jsonhero.url": {
          "type": "string",
          "description": "The URL of the JSON Hero server",
          "default": "https://jsonhero.io"
        },
        "jsonhero.openInDefaultBrowser": {
          "type": "boolean",
          "description": "Open in default browser",
          "default": true
        },
        "jsonhero.customBrowser": {
          "type": "string",
          "description": "Open in a custom browser",
          "default": "chrome",
          "enum": [
            "chrome",
            "firefox",
            "safari",
            "edge"
          ],
          "enumDescriptions": [
            "Google Chrome",
            "Firefox",
            "Safari",
            "Microsoft Edge"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/node-fetch": "^2.6.0",
    "@types/open": "^6.2.1",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@jsonhero/path": "^1.0.18",
    "json-source-map": "^0.6.1",
    "node-fetch": "^2.6.7",
    "open": "^8.4.0"
  }
}